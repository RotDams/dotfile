; Default: 0
base-temperature = 20

; Default: 80
warn-temperature = 70

units = false
format = <label>
format-warn = <label-warn>
label =%temperature-c%¬∞C
label-foreground = ${colors.secondary}
label-warn = %temperature-c%¬∞C
label-warn-foreground = #f00


